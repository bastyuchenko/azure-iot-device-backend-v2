<Window x:Class="IoT.Device.SASAuth.FileUpload.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IoT.Device.SASAuth.FileUpload.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button HorizontalAlignment="Left" Margin="45,44,0,0" VerticalAlignment="Top"  x:Name="btnUploadFile" Content="Upload file from device side" Click="btnUploadFile_Click"/>
        <TextBox x:Name="deviceIdentity" HorizontalAlignment="Left" Margin="153,88,0,0" TextWrapping="Wrap" Text="test-file-upload-device" VerticalAlignment="Top" Width="305"/>
        <Label Content="Device identity" HorizontalAlignment="Left" Margin="60,84,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnConnect" Content="Connect" HorizontalAlignment="Left" Margin="45,10,0,0" VerticalAlignment="Top" Click="btnConnect_Click"/>

    </Grid>
</Window>
